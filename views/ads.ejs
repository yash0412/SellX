<html>
    <head>
        <title>
            SellX - The biggest community to buy and sell
        </title>
        <link rel="shortcut icon" href="S.png">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.css">
        <link rel="stylesheet" href="style3.css">
    </head>
    <body>
        <div class="ui inverted segment">
            <div class="ui inverted secondary menu">
                <div class="header item">
                    <strong>SellX</strong>
                </div>  
                <a class="item" href="/home">
                    <i class="Home icon"></i>
                    Home
                </a> 
                <a class="item" href="/add">
                    <i class="Plus icon"></i>
                    Post an Ad
                </a> 
                <a class="item" href="/password">
                    <i class="Mail icon"></i>
                    Change Password
                </a>
                <div class="right menu">
                    <a class="item"><i class="icon user circle"></i><%= data.user%></a>
                    <a class="item" href="/logout"><i class="Sign Out icon"></i>Log Out</a>
                </div>
            </div>
        </div>
        <div class="ui grid">
            <% data.ads.forEach(function(ad){ %>
                <div class="five wide column">
                    <div class="ad">
                        <% var source = "."+ad.image %> 
                        <div class="image"><img src= "<%=source %>" ></div>
                        <span class="details">
                            <span class="desc"><%= ad.description %></span><br>
                            <span class="price">Price: â‚¹ <%=ad.price%>/-</span><br>
                            <span class="mail">Posted by: <%= ad.user_mail %></span><br>
                            <br>
                            <a href="/delad?img=<%=ad.image%>"><button class="ui button basic negative"><i class="trash alternate icon"></i>Delete Ad</button></a>
                        </span>
                    </div>
                </div>
            <% }); %>
        </div>
            